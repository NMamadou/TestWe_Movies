{% form_theme form_movie with ['bootstrap_3_layout.html.twig', _self] %}

{% block _movie_movieHasPeople_entry_widget %}
    <div class="entry">
        {{ form_widget(form) }}
        <div><span class="removePerson">X</span></div>
    </div>
{% endblock %}

{% extends "base.html.twig" %}

{% block container %}
    {{ form_start(form_movie) }}

    {{ form_row(form_movie.title) }}
    {{ form_row(form_movie.duration) }}
    {{ form_row(form_movie.types) }}

    {# store the prototype on the data-prototype attribute #}
    <ul id="people-fields-list"
        data-prototype="{{ form_widget(form_movie.movieHasPeople.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}">
        {% for person in form_movie.movieHasPeople %}
            <li>
                {{ form_errors(person) }}
                {{ form_widget(person) }}
            </li>
        {% endfor %}
    </ul>

    <a href="#"
       class="add-another-collection-widget"
       data-list="#people-fields-list">Add another person</a>

    {{ form_end(form_movie) }}
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $('.add-another-collection-widget').click(function (e) {
            var list = $($(this).attr('data-list'));
            var counter = list.data('widget-counter') | list.children().length;
            if (!counter) {
                counter = list.children().length;
            }
            var newWidget = list.attr('data-prototype');
            newWidget = newWidget.replace(/__opt_prot__/g, counter);

            counter++;
            list.data('widget-counter', counter);

            var newElem = $(list.attr('data-widget-tags')).html(newWidget);
            newElem.appendTo(list);
        });

        $('#people-fields-list').on('click', '.removePerson', function () {
            $(this).parents('li').remove();
        })
    </script>
{% endblock %}

{% block css %}
    <style>
        .entry {
            display: flex;
        }

        .removePerson {
            cursor: pointer;
        }
    </style>
{% endblock %}